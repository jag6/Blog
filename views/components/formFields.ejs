<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
    <label for="pageTitle">Category</label>
    <input required value="<%= article.category %>" type="text" name="category" id="category" class="form-control">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group">
    <label for="markdown">Body</label>
    <textarea required name="markdown" id="markdown" class="form-control" rows="20" columns="30"><%= article.markdown %></textarea>
</div>
<div class="form-group">
    <label for="image">Image</label>
    <input required value="<%= article.image %>" type="text" name="image" id="image" class="form-control" placeholder="/images/.../.jpg">
    <input type="file" name="image_file" id="image_file">
</div>
<div class="form-group">
    <label for="image_description">Image Description</label>
    <input required value="<%= article.image_description %>" type="text" name="image_description" id="image_description">
</div>
<div class="form-group">
    <label for="author">Author</label>
    <input required value="<%= article.author %>" type="text" name="author" id="author" class="form-control">
</div>
<div class="multiple-btns-div">
    <a href="/dashboard#to-Dashboard" class="btn red">Cancel</a>
    <button type="submit" class="btn green">SAVE</button>
</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../components/css') %>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:locale" content="en_US"/>
    <meta property="og:type" content="article"/>
    <!-- Page Data -->
    <title><%= article.title %></title>
    <meta name="description" content="<%= article.description %>">
    <meta name="author" content="<%= article.author %>">
    <!-- Twitter MetaData -->
    <meta name="twitter:title" content="<%= article.title %>">
    <meta name="twitter:description" content="<%= article.description %>">
    <!-- <meta name="twitter:image" content="<%= article.twitterImg %>"> -->
    <!-- Other Social Media MetaData -->
    <meta property="og:title" content="<%= article.title %>">
    <meta property="og:description" content="<%= article.description %>">
    <!-- <meta property="og:image" content="<%= article.ogImg %>"> -->
    <meta property="og:url" content="website.com/<%= article.slug %>">
    <%- include('../components/scripts') %>
    <script type="module" src="/scripts/backBtn.js" defer></script>
</head>
<body>
    <%- include('../components/header') %>
    <main>
        <section class="myContainer">
            <article class="article">
                <section>
                    <h1><%= article.title %></h1>
                </section>
                <div class="multiple-stuff-div">
                    <p><%= article.createdAt.toLocaleDateString() %></p>
                    <a class="b" href=""><%= article.category %></a>
                </div>
                <div class="multiple-btns-div margin-top-1 margin-btm-2" id="hidden-a"></div>
                <section class="article-body">
                    <%- article.sanitizedHtml %>
                </section>
            </article>
        </section>
    </main>
    <%- include('../components/iconBar') %>
    <%- include('../components/footer') %>
</body>
</html>
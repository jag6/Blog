<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,400;0,700;0,800;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Page Data -->
    <title>Blog</title>
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Twitter MetaData -->
    <meta name="twitter:title" content="">
    <meta property="twitter:description" content="">
    <meta name="twitter:image" content="">
    <!-- Other Social Media MetaData -->
    <meta property="og:title" content="">
    <meta property="og:description" content="">
    <meta property="og:image" content="">
    <meta property="og:url" content="">
    <script src="/scripts/top-btn.js" defer></script>
</head>
<body>
    <%- include('../components/header') %>
    <main>
        <div class="icon-bar">
            <ul>
                <li><a href="#" class="instagram"><i class="fa fa-instagram"></i></a></li>
                <li><a href="#" class="facebook"><i class="fa fa-facebook"></i></a></li>
                <li><a href="#" class="twitter"><i class="fa fa-twitter"></i></a></li>
                <li><a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a></li>
                <li><a href="#" class="youtube"><i class="fa fa-youtube"></i></a></li>
            </ul>
          </div>
        <section class="myContainer">
            <section class="top"><h1>Articles</h1></section>
            <!-- <a class="btn blue2" href="/blog/new">CREATE NEW</a> -->
            <% articles.forEach(article => { %>
                <article class="margin-btm">
                    <section class="container-component-level1">
                        <h2><%= article.title %></h2>
                        <div class="multiple-stuff-div">
                            <p><%= article.createdAt.toLocaleDateString() %></p>
                            <a class="b" href=""><%= article.category %></a>
                        </div>
                        <div class="description container-component-level2"><%= article.description %></div>
                        <div class="multiple-btns-div">
                            <a class="btn blue" href="blog/<%= article.slug %>">Read More</a>
                            <a class="btn green" href="blog/edit/<%= article.id %>">EDIT</a>
                            <form action="/blog/<%= article.id %>?_method=delete" method="post" class="d-inline">
                                <button type="submit" class="btn red">DELETE</button>
                            </form>
                        </div>
                    </section>
                </article>
            <% }) %>
        </section>
    </main>
    <button class="top-btn" id="topBtn" onclick="topFunction()" title="To the top">Top</button>
    <%- include('../components/footer') %>
</body>
</html>
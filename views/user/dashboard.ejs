<%- include('../components/head') %>
        <section class="myContainer">
            <section class="top home-top-header" id="to-Dashboard">
                <section><h1>Dashboard</h1></section>
                <div class="flex profile-btns">
                    <a class="btn" href="/profile">Profile</a>
                    <button class="btn" id="logout">Logout</button>
                </div>
            </section>
            <section class="top home-top-header">
                <div class="flex">
                    <a class="btn yellow" href="/blog/new">CREATE NEW</a>
                </div>
                <div class="search-container">
                    <form action="">
                        <input type="text" placeholder="Search.." name="search">
                        <button type="submit"><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </section>
            <% articles.forEach(article => { %>
                <article class="margin-btm-3 article-snippet">
                    <section class="container-component-level1">
                        <section>
                            <h2><%= article.title %></h2>
                        </section>
                        <div class="multiple-stuff-div">
                            <p><%= article.createdAt.toLocaleDateString() %></p>
                            <a class="b" href="/blog/category/<%= article.category_slug %>"><%= article.category %></a>
                        </div>
                        <div class="description container-component-level2">
                            <%= article.description %>
                        </div>
                        <div class="multiple-btns-div">
                            <a class="btn blue" href="/blog/<%= article.slug %>">Read More</a>
                            <a class="btn green" href="/blog/edit/<%= article.id %>">EDIT</a>
                            <form action="/blog/delete/<%= article.id %>?_method=delete" method="post" class="d-inline">
                                <button type="submit" class="btn red">DELETE</button>
                            </form>
                        </div>
                    </section>
                </article>
            <% }) %>
        </section>
    <%- include('../components/footer') %>